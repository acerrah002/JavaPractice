public class Main {
    public static void main(String[] args) {
        Staircase("*",4);
    }
    public static void Staircase(String x, int y){
        for(int i=y;i>0;i--){
            for(int t=i-1;t>0;t--){
                System.out.print(x);
            }
            System.out.println(x);
        }
    }
}
